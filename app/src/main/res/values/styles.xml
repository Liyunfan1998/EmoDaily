<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryStatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/AppActionBarTheme</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme2" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimary2</item>
    </style>

    <style name="AppTheme3" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary3</item>
        <item name="colorPrimaryDark">@color/colorPrimary3</item>
    </style>

    <style name="AppTheme4" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary4</item>
        <item name="colorPrimaryDark">@color/colorPrimary4</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionBarSize">@dimen/actionbar_height</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:elevation">0dp</item>-->
        <!--<item name="elevation">0dp</item>-->

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
